generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId // This is the primary key
  email     String   @unique
  username  String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId // This is the primary key
  price       Int
  address     String
  city        String
  state       String
  zip         Int
  latitude    String
  longitude   String
  bedroom     Int
  bathroom    Int
  size        Int?
  type        Type
  property    Property
  description String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @db.ObjectId
}

enum Type {
  buy
  rent
}

enum Property {
  house
  townhouse
  condo
  multifamily
  apartment
  land
}
